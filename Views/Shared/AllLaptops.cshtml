@model Laptop

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Img" alt="laptop.Name" />
    <h2>@Model.Name</h2>
    <p>@Model.ShortDescription</p>
    <p>Price: @Model.Price</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.Id" >Добавити в корзину</a></p>
</div>